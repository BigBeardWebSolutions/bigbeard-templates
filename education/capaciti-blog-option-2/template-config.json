  "image_slots": [
    {
      "selector": ".logo-img",
      "property": "src",
      "path": "images/logo.png",
      "keywords": ["logo", "brand"],
      "aspect_ratio": "auto",
      "min_width": 200
    },
    {
      "selector": ".footer-logo img",
      "property": "src",
      "path": "images/footer-logo.png",
      "keywords": ["logo", "brand", "footer"],
      "aspect_ratio": "auto",
      "min_width": 200
    },
    {
      "selector": ".featured-image",
      "property": "src",
      "path": "images/featured-story.png",
      "keywords": ["featured", "story", "hero", "leadership"],
      "aspect_ratio": "16:9",
      "min_width": 600
    },
    {
      "selector": ".article-card:nth-child(1) .article-image",
      "property": "src",
      "path": "images/article-1.png",
      "keywords": ["article", "blog", "education"],
      "aspect_ratio": "4:3",
      "min_width": 400
    },
