  "sections": {
    "header": {
      "required": true,
      "customizable": true,
      "description": "Fixed navigation bar with logo, nav links, and CTA button"
    },
    "page-title": {
      "required": true,
      "customizable": true,
      "description": "Centered page heading 'Blog & Insights'"
    },
    "featured-story": {
      "required": true,
      "customizable": true,
      "description": "Split-layout featured article with text left and image right, including badge, date, read time, excerpt, and read more link"
    },
    "article-grid": {
      "required": true,
      "customizable": true,
      "description": "4-column grid of article cards (8 total) with image, date, read time, title, and read more link"
    },
    "pagination": {
      "required": true,
      "customizable": false,
      "description": "Numbered pagination with active state and next arrow"
    },
    "footer": {
      "required": true,
      "customizable": true,
      "description": "Dark navy footer with logo, tagline, social links, quick links, locations, and copyright"
    }
  },
  "css_variables": {
    "--primary-color": {
      "default": "#1d2951",
