  "image_slots": [
    {
      "selector": ".hero-bg-img",
      "property": "src",
      "path": "images/hero-bg.png",
      "keywords": ["hero", "education", "tech", "motion graphics"],
      "aspect_ratio": "16:9",
      "min_width": 1920
    },
    {
      "selector": ".logo-img",
      "property": "src",
      "path": "images/logo.png",
      "keywords": ["logo", "brand"],
      "aspect_ratio": "auto",
      "min_width": 200
    },
    {
      "selector": ".footer-logo img",
      "property": "src",
      "path": "images/footer-logo.png",
      "keywords": ["logo", "brand", "footer"],
      "aspect_ratio": "auto",
      "min_width": 200
    },
    {
      "selector": ".card-image-become",
      "property": "src",
      "path": "images/card-become.png",
      "keywords": ["person", "champion", "featured"],
      "aspect_ratio": "auto",
      "min_width": 400
    },
    {
      "selector": ".card-image-hire",
      "property": "src",
      "path": "images/card-hire.png",
      "keywords": ["person", "talent", "professional"],
      "aspect_ratio": "auto",
      "min_width": 400
    },
    {
      "selector": ".card-image-amplify",
      "property": "src",
      "path": "images/card-amplify.png",
      "keywords": ["person", "impact", "community"],
      "aspect_ratio": "auto",
      "min_width": 400
    },
    {
      "selector": ".impact-visual",
      "property": "src",
      "path": "images/removal-bg.png",
      "keywords": ["impact", "visual", "featured"],
      "aspect_ratio": "auto",
      "min_width": 400
    }
  ],
  "sections": {
    "hero": {
      "required": true,
      "customizable": true,
      "description": "Full-height hero with background image and headline"
    },
    "grow-your-future": {
      "required": true,
      "customizable": true,
      "description": "3 featured cards with gradient backgrounds, images, titles, and CTAs"
    },
    "we-drive-change": {
      "required": true,
      "customizable": true,
      "description": "3 circular icons with colored borders representing core pillars"
    },
    "solutions": {
      "required": true,
      "customizable": true,
      "description": "4-column grid of solution cards with background images and overlays"
    },
    "impact-stats": {
      "required": true,
      "customizable": true,
      "description": "Statistics section with 6 metrics on dark overlay background"
    },
    "accreditation-partners": {
      "required": true,
      "customizable": true,
      "description": "Partner/accreditation logos in centered rows"
    },
    "timeline": {
      "required": false,
      "customizable": true,
      "description": "Horizontal timeline with year nodes and descriptions"
    },
    "success-stories": {
      "required": true,
      "customizable": true,
      "description": "Testimonial cards on colored background with tilted layout"
    },
    "get-to-know-us": {
      "required": true,
      "customizable": true,
      "description": "About section with 4-column image grid"
    },
    "visionary-partners": {
      "required": false,
      "customizable": true,
      "description": "Partner logos row"
    },
    "join-community": {
      "required": true,
      "customizable": true,
      "description": "Email newsletter signup on colored background"
    },
    "footer": {
      "required": true,
      "customizable": true,
      "description": "Dark footer with logo, social links, quick links, locations"
    }
  },
