  "sections": {
    "hero": {
      "required": true,
      "customizable": true,
      "description": "Full-height hero with background image and headline"
    },
    "how-we-drive-change": {
      "required": true,
      "customizable": true,
      "description": "Section title and description with 4 solution cards featuring background images, titles, and learn more CTAs"
    },
    "impact-stats": {
      "required": true,
      "customizable": true,
      "description": "Dark gradient background with 6 statistics, description, person image, and partner CTA button"
    },
    "timeline": {
      "required": false,
      "customizable": true,
      "description": "Horizontal timeline with 6 year nodes (one featured center) and descriptions"
    },
    "success-stories": {
      "required": true,
      "customizable": true,
      "description": "Testimonial cards on red background with tilted layout"
    },
    "get-to-know-us": {
      "required": true,
      "customizable": true,
      "description": "About section with 4-column image grid"
    },
    "visionary-partners": {
      "required": false,
      "customizable": true,
      "description": "Partner logos in centered row"
    },
    "join-community": {
      "required": true,
      "customizable": true,
      "description": "Email newsletter signup on red background"
    },
    "footer": {
      "required": true,
      "customizable": true,
      "description": "Dark navy footer with logo, social links, quick links, locations, and copyright"
    }
  },
