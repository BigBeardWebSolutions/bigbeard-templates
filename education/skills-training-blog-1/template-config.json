  "sections": {
    "header": {
      "required": true,
      "customizable": true,
      "description": "Fixed navigation bar with logo, nav links, and CTA button"
    },
    "page-title": {
      "required": true,
      "customizable": true,
      "description": "Centered page title heading for the blog listing"
    },
    "featured-story": {
      "required": true,
      "customizable": true,
      "description": "Full-width featured story banner with gradient overlay, badge, title, excerpt, date, and read time"
    },
    "article-grid": {
      "required": true,
      "customizable": true,
      "description": "3-column CSS grid of 9 article cards with images, metadata pills, titles, and excerpts"
    },
    "pagination": {
      "required": true,
      "customizable": false,
      "description": "Centered numbered pagination with active state and next button"
    },
    "footer": {
      "required": true,
      "customizable": true,
      "description": "Dark navy footer with logo, tagline, social links, quick links, and locations"
    }
