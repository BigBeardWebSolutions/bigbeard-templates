  "sections": {
    "utility-bar": {
      "required": true,
      "customizable": true,
      "description": "Top teal bar with address, email, phone, members centre, and members login"
    },
    "header": {
      "required": true,
      "customizable": true,
      "description": "Sticky frosted-glass header with logo, 7 nav links, search icon, and red Contact Us CTA"
    },
    "hero": {
      "required": true,
      "customizable": true,
      "description": "Full-width hero with hospital background image and teal gradient overlay"
    },
    "quick-links": {
      "required": true,
      "customizable": true,
      "description": "3 image cards with gradient overlays for Research Centre, Members Centre, Podcast"
    },
    "members": {
      "required": true,
      "customizable": true,
      "description": "Grey background section with description text and member hospital logos with pagination dots"
    },
    "news": {
      "required": true,
      "customizable": true,
      "description": "3 industry news article cards with images, titles, excerpts, and Continue Reading links"
    },
    "footer": {
      "required": true,
      "customizable": true,
      "description": "Teal footer with 4 columns (Quick Links, Legal, Archive, Contact), social icons, and red copyright bar"
    }
  },
  "css_variables": {
    "--primary-color": {
      "default": "#8cc3d1",
      "description": "Primary brand color (teal)"
    },
    "--secondary-color": {
      "default": "#ee3524",
      "description": "Secondary brand color (red)"
    },
    "--text-color": {
      "default": "#3c3c3c",
      "description": "Primary text color (charcoal)"
    },
    "--background-color": {
      "default": "#ffffff",
      "description": "Page background color (white)"
    },
    "--surface-color": {
      "default": "#efefef",
      "description": "Surface/section background color (grey)"
    }
  },
  "responsive_breakpoints": {
    "tablet": "1024px",
    "mobile": "768px"
  }
}
