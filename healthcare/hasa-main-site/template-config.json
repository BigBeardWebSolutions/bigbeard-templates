  "image_slots": [
    {
      "selector": ".hero__bg-img",
      "property": "src",
      "path": "images/hero-bg.png",
      "keywords": ["hero", "hospital", "healthcare", "interior"],
      "aspect_ratio": "16:9",
      "min_width": 1920
    },
    {
      "selector": ".logo-img",
      "property": "src",
      "path": "images/logo.png",
      "keywords": ["logo", "brand", "healthcare"],
      "aspect_ratio": "auto",
