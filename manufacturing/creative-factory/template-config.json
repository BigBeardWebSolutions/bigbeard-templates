  "sections": {
    "hero": {
      "required": true,
      "customizable": true,
      "description": "Full-width hero with dark video overlay, large uppercase headline, subtitle, and CTA button"
    },
    "intro": {
      "required": true,
      "customizable": true,
      "description": "Two-column intro section with descriptive paragraphs and secondary CTA"
    },
    "what-we-offer": {
      "required": true,
      "customizable": true,
      "description": "Three glassmorphism service cards on a gradient purple background with CTA"
    },
    "case-studies": {
      "required": true,
      "customizable": true,
      "description": "Side-by-side case study images with titles, tags, and gradient view links"
    },
    "testimonials": {
      "required": true,
      "customizable": true,
      "description": "Testimonial section with star ratings, quotes, and navigation arrows"
    },
    "subscribe": {
      "required": false,
      "customizable": true,
      "description": "Newsletter subscribe section with image, email input, and submit button"
    },
    "partners": {
      "required": false,
      "customizable": true,
      "description": "Partner/client logos in a horizontal row"
    },
    "footer": {
      "required": true,
      "customizable": true,
      "description": "Dark footer with large heading, phone, email, social links, address, and copyright"
    }
  },
